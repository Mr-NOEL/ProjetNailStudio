<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}

            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}
    </head>
    <body>
            <!-- header -->
            <!-- Informations -->
            <br>
            <div class="container-fluid" >
                <div class="text-right" id="reseauTopBar">
                    <span id="spanCoordonees">
                        <img src="{{ asset('assets/img/reseau/logo_mobile.png') }}" id="logo">
                            <span><a id="topNumMobile">07.84.97.89.69</a></span>
                        <img src="{{ asset('assets/img/reseau/logo_mail.png') }}" id="logo">
                            <strong><a>nailstudio22icloud.com</a></strong>
                    </span>
                    <span id="spanReseau">
                        <a href="https://facebook.com/" target="_blank" id="facebook">
                            <img src="{{ asset('assets/img/reseau/logo_facebook.png') }}" id="logo_reseau">
                        </a>
                        <a href="https://instagram.com/" target="_blank" id="instagram">
                            <img src="{{ asset('assets/img/reseau/logo_instagram.png') }}" id="logo_reseau">
                        </a>
                    </span>
                </div>
            </div>
            <br>
            <!-- Carousel -->
            <div class="container-fluid">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" id="carouselImg">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="assets/img/imgLocal/facade.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="assets/img/imgLocal/localUn.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="assets/img/imgLocal/localDeux.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <br>
            <!-- Menu -->
            <div class="container-fluid" >
                <div class="text"id="menuBar">
                <div class="row">
                    <div class="col">
                        <div class="text-center" id="accueil">
                            <a href="accueil" id="txtAccueil"><strong class="
                                    {% if app.request.pathInfo =="/accueil" %}actif
                                    {% else %}inactif
                                    {% endif %}">Accueil</strong></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center" id="services">
                            <a href="services" id="txtServices"><strong class="
                                    {% if app.request.pathInfo =="/services" %}actif
                                    {% else %}inactif
                                    {% endif %}">Services</strong></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center" id="realisations">
                            <a href="realisations" id="txtRealisations"><strong class="
                                    {% if app.request.pathInfo =="/realisations" %}actif
                                    {% else %}inactif
                                    {% endif %}">Réalisations</strong></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center" id="reservations">
                            <a href="reservations" id="txtReservations"><strong class="
                                    {% if app.request.pathInfo =="/reservations" %}actif
                                    {% else %}inactif
                                    {% endif %}">Réservations</strong></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="text-center" id="Contact">
                            <a href="contact" id="txtContact"><strong class="
                                    {% if app.request.pathInfo =="/contact" %}actif
                                    {% else %}inactif
                                    {% endif %}">Contact</strong></a>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            <br>
            <!-- Text -->
            <br>
            <div class="container-fluid">
                <div class="text-center">
                    <strong><p id="bienvenue">L'institut NailStudio vous ouvre ses portes pour vous apportez bien être, beauté et pour tous les conseils dont vous avez besoin.</p></strong>
                </div>
            </div>
            <br>
            <!-- Contenu de la page -->
            {% block body %}

            {% endblock %}
            <!-- footer -->
            <br>
            <div class="container-fluid">
                <div class="text" id="TCHBar">
                    <footer class="footer" id="sidebarBottom">
                        <div class="container">
                            <div class="row">
                                <div class="col" id="divNousTrouver" target="_blank" >
                                    <div class="text-center" id="nousTrouver">
                                        <a id="txtNousTrouver">Nous trouver :</a>
                                        <a id="imgNousTrouver" href="https://www.google.fr/maps/place/41+Rue+du+G%C3%A9n%C3%A9ral+de+Gaulle,+90700+Ch%C3%A2tenois-les-Forges/@47.5601799,6.8514534,190m/data=!3m1!1e3!4m13!1m7!3m6!1s0x47923d5811ed6489:0xaa9e3b69ca28a978!2s41+Rue+du+G%C3%A9n%C3%A9ral+de+Gaulle,+90700+Ch%C3%A2tenois-les-Forges!3b1!8m2!3d47.560201!4d6.8518356!3m4!1s0x47923d5811ed6489:0xaa9e3b69ca28a978!8m2!3d47.560201!4d6.8518356" target="_blank">
                                        </a>
                                    </div>
                                </div>
                                <div class="col" id="divContact">
                                    <div class="text-center" id="nousContacter">
                                        <a id="txtNousContacter">Nous contacter :</a>
                                        <div class="text-left" id="adresseReseauBottomBar">
                                            <a href="https://facebook.com/" target="_blank" id="adresse">
                                                <img src="{{ asset('assets/img/reseau/adresse.png') }}" id="logo">
                                            </a>
                                            <span id="spanAdresse">
                                                <strong><a id="adresseTitre">Adresse :</a></strong>
                                                <a id="adresse">41 Rue du Général de Gaulle,90700 Châtenois-les-Forges</a>
                                            </span>
                                        </div>
                                        <div class="text-left" id="mobileReseauBottomBar">
                                            <a href="https://facebook.com/" target="_blank" id="mobile">
                                                <img src="{{ asset('assets/img/reseau/logo_mobile.png') }}" id="logo">
                                            </a>
                                            <span id="spanMobile">
                                                <strong><a id="mobileTitre">Téléphone :</a></strong>
                                                <a id="mobile">07.84.97.89.69</a>
                                            </span>
                                        </div>
                                        <div class="text-left" id="emailReseauBottomBar">
                                            <a href="https://facebook.com/" target="_blank" id="mail">
                                                <img src="{{ asset('assets/img/reseau/logo_mail.png') }}" id="logo">
                                            </a>
                                            <span id="spanEmail">
                                                <strong><a id="emailTitre">Email :</a></strong>
                                                <a id="email">nailstudio22icloud.com</a>
                                            </span>
                                        </div>
                                        <div class="text-left" id="facebookReseauBottomBar">
                                            <a href="https://facebook.com/" target="_blank" id="facebook">
                                                <img src="{{ asset('assets/img/reseau/logo_facebook.png') }}" id="logo_reseau_bottom">
                                            </a>
                                            <span id="spanFacebook">
                                                <strong><a id="facebookTitre">Facebook</a></strong>
                                            </span>
                                        </div>
                                        <div class="text-left" id="instagramReseauBottomBar">
                                            <a href="https://instagram.com/" target="_blank" id="instagram">
                                                <img src="{{ asset('assets/img/reseau/logo_instagram.png') }}" id="logo_reseau_bottom">
                                            </a>
                                            <span id="spanInstagram">
                                                <strong><a id="instagramTitre">Instagram</a></strong>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col" id="divNosHoraires">
                                    <div class="text-center" id="nosHoraires :">
                                        <a id="txtNosHoraires">Nos horaires :</a>
                                        <div class="text-center">
                                            <br>
                                            <p><strong>Institut:</strong></p>
                                            <a><strong>Lundi-Samedi:</strong></a>
                                            <br>
                                            <a>9h00-12h00 et 13h00-19h00</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
            <div class="container-fluid">
                <div class="text-center" id="copyright"><strong>Copyright@2021 Nailstudio - Tout droit réservés - <a href="mentionLegales">Mention légales</a> </strong></div>
            </div>
            <br>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
